---
- type: string
  pattern: www.google.com
  action: replace
  value: google.com

- name: Fix hyphens
  type: regex
  pattern: '[-]{3,}'
  action: replace
  value: '--'

- name: Remove unnecessary periods
  type: regex
  pattern: '([?!:])[.]+'
  action: replace
  value: '\1'

- name: Remove extra spaces
  type: regex
  pattern: '[\s]{2,}'
  action: replace
  value: " "
